
  <body>
  <!--以下を変更するユーザーデータへ-->
   <% if flash[:notice] %>
     <p id="notice">
       <%= flash[:notice] %>
     </p>
   <% end %>
      <% if flash[:success]%>
     <p id="notice">
       <%= flash[:su] %>
     </p>
   <% end %>
  <main>
    <div class="container px-5 px-sm-0" >
     <div class="error_explanation text-danger lead">
    </div>
      <div class="row">
        <div class="col-md-3">
          <h2>User info</h2>
          <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %>

          <!--<img class=と入力する-->
         <table class= "table">
            <tbody>
              <tr></tr>
              <tr>
                <th>name</th>
                <th><%= @user.name %></th>
              </tr>
              <tr>
                <th>introduction</th>
                <th><%= @user.introduction %></th>
              </tr>
            </tbody>
          </table>

          <div class="row">
              <%= link_to "", edit_user_path(@user), class: "btn btn-outline-secondary btn-block fas fa-user-cog" %>
          </div>
           <h2 class="mt-3">New book</h2>

          <%= form_with model:@book,local:true do |f| %>
           <h4>Title</h4>
            <%= f.text_field :title, class: "form-control" %>
            <h4>Opinion</h4>
            <%= f.text_area :body, class: "form-control"  %>
            <%= f.submit 'Create Book',class: "btn btn-success my-3"%>
           <% end %>

        </div>
        <div class="col-md-8 offset-md-1">
          <h2>Books</h2>
            <table class="table table-hover table-inverse">
              <thead>
                <tr>
                  <th></th>
                  <th>Title</th>
                  <th>Opinion</th>
                  <th colspan="3"></th>
                  </tr>
              </thead>
                  <tbody>
                    <% @user.books.each do |book| %>
                    <tr>
                    <td><%= link_to user_path(@user) do %><%= attachment_image_tag book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'100x100' %></td>
                    <% end %>
                    <td><%= link_to book.title, book_path(book.id)%></td>
                    <td><%= book.body %></td>
                    </tr>
                    <% end %>
                 </tbody>
            </table>
        </div>
      </div>
    </div>
</main>
</body>